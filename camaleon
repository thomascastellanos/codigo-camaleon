import random
cantidad = int(input("Cantidad de números a validar: "))

numeros = []
for i in range(cantidad):
    num = random.randint(100, 99999)
    numeros.append(num)
print("Números generados: ", end="")
for i in range(len(numeros)):
    if i == len(numeros) - 1:
        print(numeros[i])
    else:
        print(numeros[i], end=", ")
print("Resultados:")
for num in numeros:

    texto = str(num)
    suma = 0
    for digito in texto:
        suma += int(digito)
    

    invertido = int(texto[::-1])
    suma_es_par = (suma % 2 == 0)
    invertido_div_3 = (invertido % 3 == 0)
    if suma_es_par and invertido_div_3:
        print(f"{num} -> Si  (suma={suma} par, invertido={invertido} divisible entre 3 → Si)")
    else:
        if suma_es_par and not invertido_div_3:
            print(f"{num} -> No  (suma={suma} par, pero invertido={invertido} NO divisible entre 3 → cumple solo 1 condición → No)")
        elif not suma_es_par and invertido_div_3:
            print(f"{num} -> No  (suma={suma} impar, invertido={invertido} divisible entre 3 → cumple solo 1 condición → No)")
        else:
            print(f"{num} -> No  (suma={suma} impar, invertido={invertido} NO divisible entre 3 → No cumple ninguna → No)")
